@model VATMVCAPPFramework.ViewModel.ManageWalletViewModel
@using VATMVCAPPFramework.Utilities

@{
    ViewBag.Title = "Manage Hall";
    Layout = "~/Views/Shared/_APPPortal.cshtml";
}
@Html.Partial("_ToastrViewHeader")
<div class="row">
    <div class="col-xs-12">
        <div class="page-title-box">
            <h4 class="page-title">  </h4>
            <ol class="breadcrumb p-0 m-0">
                <li>
                    <a href="#">VATACADA</a>
                </li>
                <li>
                    <a href="#">Administration </a>
                </li>
                <li class="active">
                    Hall Management
                </li>
            </ol>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <div class="row">
                <div class="card-box table-responsive">
                    @Html.Partial("_PartialWalletSearch", Model.CreatWalletSearchViewModel)
                </div>

                <br />

                @if (Model.WalletViewModel.ParentId >= 1)
                {
                    <div class="row">
                        <div class="col-md-8 col-lg-9">
                        <div class="row">

                            @Html.Partial("_PartialAddWallet", Model.WalletViewModel)

                        </div>
                    </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>
    @section JavaScript
    {
        <script type="text/javascript">
          $(".select2").select2();
        </script>
    }

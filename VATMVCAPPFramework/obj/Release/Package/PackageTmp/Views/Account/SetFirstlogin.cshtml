
@using VATMVCAPPFramework.Models
@model SetFirstPasswordViewModel
@{
    ViewBag.Title = "Set Login Credentials";
    Layout = "~/Views/Shared/_APPAccountPartial.cshtml";
}


@using (Html.BeginForm("SetFirstlogin", "Account",FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
    @Html.AntiForgeryToken()
    <div class="sign-container">
        <div class="text-center">
            <h2 class="logo"><img src="imgs/logo-dark.png" width="130px" alt="" /></h2>
            <h4>Login</h4>
        </div>

        <div class="sign-in-form">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(m=>m.code)
            
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", required = true })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password", required = true })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

          
            <button type="submit" class="btn btn-info btn-block">Submit</button>
           
        </div>
        <div class="text-center copyright-txt">
            <small>MegaDin - Copyright © 2017</small>
        </div>
    </div>


}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

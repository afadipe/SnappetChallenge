
@model VATMVCAPPFramework.ViewModel.CreditWallet

@using (Html.BeginForm("CreditWallet", "Wallet", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4> Wallet Management </h4>

        @Html.HiddenFor(m => m.WalletId)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            @Html.Label("Wallet Amount", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.WalletAmount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.WalletAmount, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-info">Save </button>
        </div>
    </div>
}




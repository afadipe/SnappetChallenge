@model IEnumerable<VATMVCAPPFramework.Models.BorrowedBookViewModel>



@{
    ViewBag.Title = "Book Setting";
    Layout = "~/Views/Shared/_APPPortal.cshtml";
}



@using (Html.BeginForm())
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h1 class="page-heading" id="myModalLabel">Blacklist Book </h1>
    </div>

    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Student RegNo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("UserName", new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>

        <div class="modal-footer">

            <button type="submit" class="btn btn-info">Search</button>
        </div>

       
    </div>
}
@if (Model != null)
{

    <div class="panel-body table-responsive">
       <p>Student Information</p>
        
         <table class="table convert-data-table table-striped" id="lookUptbl">
          
            
             @foreach (var logItem in Model)
            {
              
              
               
                
                <tr>
                    <td>
                        First Name:
                    </td>
                    <td>@Html.DisplayFor(modelItem => logItem.FirstName)</td>
                </tr>
                <tr>
                    <td>
                        Last Name:
                    </td>

                    <td>@Html.DisplayFor(modelItem => logItem.LastName)</td>

                </tr>
                <tr>
                    <td>
                        Class Name:
                    </td>
                    <td>@Html.DisplayFor(modelItem => logItem.ClassName)</td>
                </tr>
                <tr>
                    <td>
                        Programme Name:
                    </td>
                    <td>@Html.DisplayFor(modelItem => logItem.Programme)</td>
                </tr>
                <tr>
                    <td>
                        Arm Name:
                    </td>
                    <td>@Html.DisplayFor(modelItem => logItem.Arm)</td>
                </tr>
            }

             

        </table>
        <p>
            Previous History:
        </p>
        <table class="table convert-data-table table-striped" id="lookUptbl">
         
            
               <thead>
                <tr>
                    <th>S/N</th>

                    <th>Title </th>
                    <th>ISBN </th>
                    <th>Tag</th>

                    @*<th>Book Status</th>*@

                    <th width="5%">Action</th>
                    @*<th width="5%"></th>*@
                </tr>
            </thead>
            <tbody>
                @{int rowNo = 0;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(rowNo += 1)</td>

                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.ISBN)</td>
                        <td>@Html.DisplayFor(modelItem => item.Tag)</td>
                        @*<td>@Html.DisplayFor(modelItem => item.Status)</td>*@
                        <td>
                            @Html.ActionLink("Book Details", "Details", new { id = item.ID })
                        </td>
                        @*<td><a data-target='#addedit_modal' role='button' data-edit-id='@Html.DisplayFor(modelItem => item.ID)' class='btn btn-default editBtn' data-toggle='modal'><i class='fa fa-edit'></i>Edit</a></td>
                            <td><a data-target='#delete_modal' role='button' data-delete-id='@Html.DisplayFor(modelItem => item.ID)' class='btn btn-danger deleteBtn' data-toggle='modal'><i class='fa fa-trash'></i>Delete</a></td>*@

                    </tr>
                 
                       
                }

            </tbody>

        </table>
        
    </div>

}
    
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h1 class="page-heading" id="myModalLabel">Blacklist </h1>
        </div>

        @Html.AntiForgeryToken()

       



@model  List<VATMVCAPPFramework.ViewModel.StaffAcademicInfoViewModel>
@using VATMVCAPPFramework.Utilities

<table class="table convert-data-table table-striped" id="staffAcademicInfotbl">
    <thead>
        <tr>
            <th>S/N</th>
            <th>Institution</th>
            <th>Year Of Entry</th>
            <th>Year Of Graduation</th>
            <th>Certificate Obtained</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{int rowNo = 0;}
        @foreach (var item in Model)
        {
            <tr>
                <td>@(rowNo += 1)</td>
                <td>@Html.DisplayFor(modelItem => item.Institution)</td>
                <td>@Html.DisplayFor(modelItem => item.YearOfEntry)</td>
                <td>@Html.DisplayFor(modelItem => item.YearOfGraduation)</td>
                <td>@Html.DisplayFor(modelItem => item.CertificateObtained)</td>

                <td><a data-target='#addedit_modal' role='button' data-edit-id='@Html.DisplayFor(modelItem => item.Id)' class='btn btn-default editBtn' data-toggle='modal'><i class='fa fa-edit'></i>Edit</a></td>


            </tr>

        }

    </tbody>

</table>



  


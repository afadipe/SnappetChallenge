@model IEnumerable<VATMVCAPPFramework.Models.FeeItemViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_APPPortal.cshtml";
}

<link href="~/Content/StyleCustom.css" rel="stylesheet" />
<div id="MyModal" class="modal fade in">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="MyModalContent"></div>
        </div>
    </div>
</div>


@Html.Partial("_ToastrViewHeader")
<div class="ui-content-body">
    <div class="ui-container">
        <div class="row">
            <section class="panel">
                <header class="panel-heading panel-border">

                    <h3 class="box-title">Fee Item Setup</h3>
                </header>
                <div class="panel-body table-responsive">
                 
                    <p class="col-lg-offset-10 col-lg-2">
                        @Html.ActionLink("Setup New Fee Item", "Create", null, new { data_modal = "", id = "btnCreate", @class = "btn btn-success pull-right" })
                    </p>
                    <div id="studentList">
                        @Html.Partial("_ItemList", Model)
                    </div>

                </div>
            </section>
        </div>
    </div>
</div>

@section JavaScript
        {
    <script type="text/javascript">

        var table;

        table = $('#tblStudents').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true,
            "order": [[0, "asc"]],
            dom: 'Bfltip',
            buttons: [
                'copy',
                  {
                      extend: 'csvHtml5', text: 'Excel'
                  },
                  //'csv', 'excel',

                  'pdf', 'print'
            ],

        });

        var Edit = function (Id) {
            $.ajaxSetup({ cache: false });

            var EditUrl = '@Url.Action("Edit", "FeeItemSetup", new { Area = "APPPortal" })' + "?Id=" + Id;

            $("#MyModalContent").load(EditUrl, function () {
                $("#MyModalTitle").text('Update Fee Item');
                $("#btnSubmit").val('Update');
                $("#MyModal").modal({
                    //backdrop: 'static',
                    keyboard: false
                }, 'show');
                bindForm2(this);
            });
            return false;
        }

        $("#ProgId").change(function () {
            var val1 = $('#ProgId option:selected').val();
            if (val1 == '') return;           
            $.ajax({
                type: "POST",
                url: '@Url.Action("GetFeeItems", "FeeItemSetup")',
                contentType: "application/json; charset=utf-8",
                data: '{ ProgrammeId:'+ val1 + '}',
                dataType: "json",
                success: function (result) {
                    $("#studentList").html(result.View);
                    $('#tblStudents').DataTable({
                        "paging": true,
                        "lengthChange": true,
                        "searching": true,
                        "ordering": true,
                        "info": true,
                        "autoWidth": true,
                        "order": [[0, "asc"]],
                        dom: 'Bfltip',
                        buttons: [
                            'copy',
                              {
                                  extend: 'csvHtml5', text: 'Excel'
                              },
                              //'csv', 'excel',

                              'pdf', 'print'
                        ],

                    });
                   
                },
                error: function (result) {
                    alert(result.responseText);
                }
            });
           
        });

    </script>
}



    @model  List<VATMVCAPPFramework.ViewModel.HallRoomViewModel>

  <div class="panel-body table-responsive">
    <table class="table convert-data-table table-striped" id="HallRoomtbl">
        <thead>
            <tr>
                <th>S/N</th>

                <th>Hall Name</th>
                <th>Room Name</th>
                <th>No Of Rooms</th>
                <th>No Of Bed Space</th>
                <th>Number Of Expected Occupants</th>
                <th width="5%"></th>
            </tr>
        </thead>
        <tbody>
            @{int rowNo = 0;}
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(rowNo += 1)</td>
                    <td>@Html.DisplayFor(modelItem => item.HallName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.NoOfRooms)</td>
                    <td>@Html.DisplayFor(modelItem => item.NoOfBedSpace)</td>
                    <td>@Html.DisplayFor(modelItem => item.NumberOfExpectedOccupants)</td>
                    <td><a data-target='#addedit_modal' role='button' data-edit-id='@Html.DisplayFor(modelItem => item.Id)' class='btn btn-default editBtn' data-toggle='modal'><i class='fa fa-edit'></i>Edit</a></td>

                </tr>
            }

        </tbody>

    </table>
</div>



@model  VATMVCAPPFramework.Models.AssignmentModel
@using VATMVCAPPFramework.CustomClass;
@{
    ViewBag.Title = "Manage Upload";
    Layout = null;

}
@Html.Partial("_ToastrViewHeader")

<div class="modal-content">
    @using (Html.BeginForm("UploadAssignment", "SubjectGrading", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h1 class="page-heading" id="myModalLabel">@ViewBag.ModalTitle Assignment</h1>
        </div>
        <div class="modal-body">


            <div class="form-group">
                @Html.Label("Assignment Name", htmlAttributes: new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.DisplayName, new { htmlAttributes = new { @class = "form-control", required = true } })
                    @Html.ValidationMessage("", "", new { @class = "text-danger" })
                </div>
            </div>




            <div class="form-group">

                @Html.Label("Class-Arm", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.ClassArm, new SelectList(SectionHelper.GetClass(), "ID", "Name"), "Select Class.", new { @class = "form-control", Required = true })
                    @Html.ValidationMessageFor(model => model.ClassArm, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Subject Name", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.SubjectID, new SelectList(SectionHelper.GetSubject(), "ID", "SubjectName"), "Select Subject.", new { @class = "form-control", Required = true })
                    @Html.ValidationMessageFor(model => model.SubjectID, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.SubmissionDate, htmlAttributes: new { @class = "control-label col-sm-3" })
                <div class="col-sm-8">
                    <div class="input-group date" data-provide="datepicker">
                        @Html.EditorFor(model => model.SubmissionDate, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-th"></span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.SubmissionDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <h4>Upload File</h4>
            <div class="form-group">

                <input type="file" name="fileUpload" id="fileUpload" class="btn btn btn-success">
            </div>

        </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-info">Submit</button>

            </div>
            }

@model VATMVCAPPFramework.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_APPAccountPartial.cshtml";
}


@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
   
    @Html.HiddenFor(model => model.Code)
    @Html.HiddenFor(model => model.userCode)



    <div class="sign-container">
        <div class="text-center">
            <!--<h2 class="logo">MegaDin</h2>-->
            <h3><span>VATACADA  Portal</span>Reset Password </h3>
            @*<p>Enter your email address and your password will be reset and emailed to you.</p>*@
        </div>
        <div class="sign-in-form">

            @Html.ValidationSummary("", new { @class = "text-danger" })


            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", required = true })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password", required = true })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
        <div class="text-center copyright-txt">
            <small>MegaDin - Copyright © 2017</small>
        </div>
    </div>

   
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

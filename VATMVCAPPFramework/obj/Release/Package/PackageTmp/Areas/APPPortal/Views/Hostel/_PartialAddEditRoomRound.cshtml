
@model List<VATMVCAPPFramework.ViewModel.RoomRoundViewModel>
@using (Html.BeginForm("CreateRoomRound", "Hostel", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="card-box table-responsive">

        @if (Model != null && Model.Count() >= 1)
        {
            var count = Model.Count();
            <table class="table table-striped" id="roomroundInputTable">
                <thead>
                    <tr>
                        <td>Room Round CheckList </td>
                        <td>Room</td>
                        <td>Remarks</td>

                    </tr>
                </thead>
                <tbody>


                   @for (int item = 0; item < count; item++)
                   {
                       var broadSheet = Model[item];

                        <tr>
                            @Html.HiddenFor(x => x[item].HallID)

                            @Html.HiddenFor(x => x[item].RoomRoundCheckListId)

                            <td> @Html.DisplayFor(x => x[item].RoomRoundCheckListName)</td>
                            <td>

                                @Html.ListBoxFor(x => x[item].SelectedRoomId, Model[item].Rooms, new
                                       {
                                           @class = "form-control select2",
                                           multiple = "multiple",
                                           @style = "width: 100%"
                                       })

                                @*@Html.DropDownListFor(x => broadSheet.SelectedRoomId, Model[item].Rooms, "Please select...",
                                    new
                                    {
                                        @class = "form-control select2",
                                    })*@
                            </td>
                            <td>
                                @Html.EditorFor(x => x[item].Remarks, new { htmlAttributes = new { @class = "form-control" } })
                            </td>


                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
    
    <div style="text-align:right">
        <button type="submit" class="btn btn-info">Save</button>
    </div>

}

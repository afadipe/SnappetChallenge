@model  List<VATMVCAPPFramework.ViewModel.StaffEmploymentInfoViewModel>
@using VATMVCAPPFramework.Utilities

<table class="table convert-data-table table-striped" id="staffEmploymentInfotbl">
    <thead>
        <tr>
            <th>S/N</th>
            <th>Company</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Position</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{int rowNo = 0;}
        @foreach (var item in Model)
        {
            <tr>
                <td>@(rowNo += 1)</td>
                <td>@Html.DisplayFor(modelItem => item.CompanyName)</td>
                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Position)</td>

                <td><a data-target='#addedit_modal' role='button' data-edit-id='@Html.DisplayFor(modelItem => item.Id)' class='btn btn-default editBtn' data-toggle='modal'><i class='fa fa-edit'></i>Edit</a></td>


            </tr>

        }

    </tbody>

</table>





